<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.winoe.podrida.inicioActivity"
    android:background="@drawable/texturafondo">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/logoimg"
        android:layout_marginTop="41dp"
        android:src="@drawable/logooficial"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="114dp"
        android:id="@+id/comenzarBtn"
        android:layout_marginTop="20dp"
        android:src="@drawable/botoncomenzar"
        android:layout_below="@+id/logoimg"
        android:layout_alignStart="@+id/logoimg" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="114dp"
        android:id="@+id/reanudarBtn"
        android:layout_below="@+id/comenzarBtn"
        android:layout_centerHorizontal="true"
        android:src="@drawable/botonreanudar"
        android:layout_marginTop="10dp" />
</RelativeLayout>
